<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Session["es_empleado"] != null && (int)Session["es_empleado"] == 1)
                    {
                        <li>@Html.ActionLink("Consultar Cobros", "Index", "Empleado", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Gestionar Servicios", "Index", "GestionarServicios", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Gestionar Casas", "Index", "GestionarCasas", null, new { @class = "nav-link" })</li>
                    }

                    @if (Session["id_persona"] != null)
                    {
                        <li>@Html.ActionLink("Mis Cobros", "Index", "Usuario", null, new { @class = "nav-link" })</li>
                    }
                </ul>
                <div class="text-white d-flex align-items-center gap-3">
                    <span>Bienvenido/a, @Session["nombre_completo"]</span>
                    @Html.ActionLink("Cerrar Sesión", "CerrarSession", "Autenticacion", null, new { @class = "nav-link text-white" })
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted small mt-4">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!-- jQuery (si lo necesitas para AJAX u otras funciones) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap 5 JS Bundle (con Popper incluido) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
