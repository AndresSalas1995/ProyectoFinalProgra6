@model List<DataModels.PviProyectoFinalDBStoredProcedures.SpConsultarCobroResult>

@{
    ViewBag.Title = "Index";
}

<!-- Encabezado -->
<div class="text-center my-4">
    <h2 class="fw-bold text-primary">Gestión de Cobros</h2>
</div>

<!-- Mensaje TempData -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>@TempData["Mensaje"]</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filtros -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="IdCliente" class="form-label">Cliente</label>
                <select id="IdCliente" name="IdCliente" class="form-select">
                    <option value="">Seleccione un cliente</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="mes" class="form-label">Mes</label>
                <input type="number" name="mes" id="mes" class="form-control" placeholder="Mes" min="1" max="12" value="@Request["mes"]" />
            </div>
            <div class="col-md-2">
                <label for="anno" class="form-label">Año</label>
                <input type="number" name="anno" id="anno" class="form-control" placeholder="Año" value="@Request["anno"]" />
            </div>
            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-primary w-100">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<!-- Botón nuevo cobro -->
<div class="mb-3 text-end">
    @Html.ActionLink(" Nuevo Cobro", "Crear", "Empleado", null, new { @class = "btn btn-success bi bi-plus-lg" })
</div>

<!-- Tabla -->
<table class="table table-bordered table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th># Cobro</th>
            <th>Nombre de Casa</th>
            <th>Propietario</th>
            <th>Periodo</th>
            <th>Estado</th>
            <th class="text-center">Consultar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id_cobro</td>
                <td>@item.Nombre_casa</td>
                <td>@item.Nombre_cliente</td>
                <td>@item.Periodo</td>
                <td>
                    @if (item.Estado == "Pagado")
                    {
                        <span class="badge bg-success">Pagado</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pendiente</span>
                    }
                </td>
                <td class="text-center">
                    @Html.ActionLink("Consultar", "Detalle", "Cobros", new { id = item.Id_cobro }, new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Script para dropdown -->
@section Scripts {
    <script type="text/javascript">
        function loadDropdown(url, parametros, ddl, selected) {
            $.get(url, parametros, function (data) {
                ddl.empty();
                ddl.append($('<option>', { value: '', text: 'Seleccione un cliente' }));
                $.each(data, function (i, item) {
                    ddl.append($('<option>', {
                        value: item.Id,
                        text: item.Nombre,
                        selected: item.Id == selected
                    }));
                });
            });
        }

        $(document).ready(function () {
            loadDropdown('/Empleado/ObtenerClientesActivos', {}, $('#IdCliente'), '@Request["IdCliente"]');
        });
    </script>
}
