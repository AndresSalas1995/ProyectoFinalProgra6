@{
    ViewBag.Title = "Pago Cancelado";
}

<div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
    <div class="d-flex align-items-center">
        <i class="bi bi-check-circle-fill fs-4 me-2"></i>
        <div>
            <h4 class="alert-heading mb-1">Pago cancelado exitosamente</h4>
            <p class="mb-0">
                El pago con ID <strong>@ViewBag.Id_Cobro</strong> ha sido eliminado correctamente del sistema.
            </p>
        </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Empleado")" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Regresar
    </a>
</div>
